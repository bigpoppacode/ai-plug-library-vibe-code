# MongoDB Connection String
MONGO_URI=mongodb+srv://user:password@cluster-url/database-name?retryWrites=true&w=majority

# Secret key for creating JSON Web Tokens (JWTs)
JWT_SECRET=your-very-strong-and-long-jwt-secret-key-that-is-hard-to-guess

# The public base URL of your application (e.g., http://localhost:3000 or https://workflows.bigpoppacode.io)
BASE_URL=http://localhost:3000

# --- SendGrid Configuration ---

# Your SendGrid API Key (found in your SendGrid account settings)
SENDGRID_API_KEY=SG.your-key-here

# The email address that all application emails will be sent from (must be a verified sender in SendGrid)
EMAIL_FROM=your-email@example.com

# The ID of the SendGrid contact list you want to add new users to
SENDGRID_LIST_ID=your-list-id-here