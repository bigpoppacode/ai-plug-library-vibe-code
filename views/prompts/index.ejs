<%- include('../partials/header') %>

<div class="container">
    <div class="workflows-header blockchain-bg">
        <h1>ChatGPT Prompts Library</h1>
        <p>Browse and download from over 3,000 professionally crafted prompts.</p>
    </div>

    <% Object.keys(prompts).sort().forEach(category => { %>
        <div class="category-section">
            <details>
                <summary><%= category.replace(/[-_]/g, ' ') %></summary>
                <div class="workflow-list">
                    <% prompts[category].forEach(prompt => { %>
                        <div class="workflow-item">
                            <h3><%= prompt.name %></h3>
                            <p class="workflow-synopsis"><%= prompt.synopsis %></p>
                            <div class="workflow-links">
                                <a href="/prompts/<%= category %>/<%= prompt.id %>" class="btn btn-secondary">
                                    View Guide
                                </a>
                                <a href="/prompts/download/<%= category %>/<%= prompt.id %>" class="btn btn-download">
                                    Download
                                </a>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </details>
        </div>
    <% }); %>
</div>

<%- include('../partials/footer') %>
